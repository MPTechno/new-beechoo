<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="bee_choo_custom_invoice_paper_89" model="report.paperformat">
            <field name="name">Bee Choo European A4 - Medium Footer</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">30</field>
            <field name="margin_bottom">70</field>
            <field name="margin_left">10</field>
            <field name="margin_right">10</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">27</field>
            <field name="dpi">90</field>
        </record>

        <record id="SalesReceipt_SendByEmail_and_Print_Button_Module.sales_receipt" model="ir.actions.report.xml">
            <field name="paperformat_id" ref="bee_choo_custom_invoice_paper_89"/>
        </record>

        <template id="external_sales_receipt_layout">
            <t t-if="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id"></t>
            </t>
            <t t-if="not o or not 'company_id' in o">
                <t t-set="company" t-value="res_company"></t>
            </t>
            <t t-call="SalesReceipt_SendByEmail_and_Print_Button_Module.external_sales_receipt_layout_custom_header"/>
            <t t-raw="0"/>
            <t t-call="SalesReceipt_SendByEmail_and_Print_Button_Module.external_sales_receipt_layout_custom_footer"/>
        </template>

        <template id="external_sales_receipt_layout_custom_header">
            <div class="header">
                <div class="row">
                    <div class="col-xs-3 pull-left" style="text-align:center">
                        <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo"
                             style="max-height: 100px; magin-top:30px; margin-right:30px;"/>
                    </div>
                    <div class="col-xs-9">
                        <div style="font-weight:700;font-size:22px; text-align:center">
                            <strong>ORIGIN HERBAL HAIR TREATMENT PTE LTD</strong>
                        </div>
                        <div style="font-size:12px; text-align:center">
                            23 KAKI BUKIT PLACE SINGAPORE 416201
                        </div>
                        <div style="font-size:12px; text-align:center">
                            UEN/GST REGISTRATION NO. 200903578H
                        </div>
                        <div style="font-size:12px; text-align:center">
                            TEL. NO: +65 6742 3033
                        </div>
                        <div style="font-size:12px; text-align:center;">
                            WEBSITE:WWW.BEECHOOHAIR.COM
                        </div>
                    </div>
                </div>
            </div>
        </template>

        <template id="external_sales_receipt_layout_custom_footer">
            <div class="footer">
                <div class="row" style="border-top: 1px solid black; border-bottom:1px solid black;">
                    <div class="col-xs-7 pull-left" style="padding:5px;">
                        <div align="left" style="font-size:12px;text-transform: uppercase;">
                            <strong>
                                <span t-esc="o.amount_to_text_fixed(o.amount, o.currency_id.name)"/>
                            </strong>
                        </div>
                    </div>
                    <div class="col-xs-5 pull-right" style="padding:0px;">
                        <table border="1" align="right" class="table1 table-condensed" style="font-size:12px;">
                            <tr>
                                <td align="left">SUBTOTAL (EXCLUDING GST)</td>
                                <td align="right">
                                    <span t-esc="o.currency_id.symbol or ''"/>
                                    <span t-esc="'{0:,.2f}'.format(float(o.amount-o.tax_amount))"/>
                                </td>
                            </tr>
                            <tr>
                                <td align="left">GST PAYABLE 7%</td>
                                <td align="right" style="">
                                    <span t-esc="o.currency_id.symbol or ''"/>
                                    <span t-esc="'{0:,.2f}'.format(float(o.tax_amount))"/>
                                </td>
                            </tr>
                            <tr>
                                <td align="left">TOTAL (INCLUDING GST)
                                </td>
                                <td align="right">
                                    <span t-esc="o.currency_id.symbol or ''"/>
                                    <span t-esc="'{0:,.2f}'.format(float(o.amount))"/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
                <br/><br/><br/>                
                <div class="row" style="margin-bottom:50px;">
                    <div class="col-xs-4 pull-left" style="text-align:center;">
                        <div style="margin-top:30px;font-size:12px;">
                            <span>
                                <strong t-esc="user.name"></strong>
                            </span>
                            <div style="height:1px;width:100%;background:#000;"/>
                            <span>
                                <strong>PREPARED BY</strong>
                            </span>
                        </div>
                    </div>
                    <div class="col-xs-4"/>
                    <div class="col-xs-4 pull-right">
                        <div style="margin-top:30px;font-size:12px;text-align:center">
                            <span>
                                <strong><span style="color:white;">.</span></strong>
                            </span>
                            <div style="height:1px;width:100%;background:#000; "/>
                            <span>
                                <strong>APPROVED BY</strong>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </template>

    </data>
</openerp>