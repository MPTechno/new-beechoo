<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

<template id="report_sales_receipt_document">
    <t t-call="SalesReceipt_SendByEmail_and_Print_Button_Module.external_sales_receipt_layout">
        <div class="page">
            <div class="row" style="text-align:center;font-size:20px;">
                <strong><hr style="border:0.5px solid black;" size="5"></hr></strong>
                <div style="text-align:center;font-size: 20px;border-top:1px solid black;border-bottom:1px solid black;">
                    <strong>SALES RECEIPT</strong>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-6 pull-left">
                    <table class="table1 table-condensed"
                           style=" width:100%;height:150px;">
                        <tr>
                            <td colspan="6" style="font-size:12px;">
                                <strong>TO :</strong><br/>
                                <span t-if="o.partner_id.name" t-field="o.partner_id.name"/><br/>
                                <span t-if="o.partner_id.street" t-field="o.partner_id.street"/><br t-if="o.partner_id.street"/>
                                <span t-if="o.partner_id.street2" t-field="o.partner_id.street2"/><br t-if="o.partner_id.street2"></br>
                                <span t-if="o.partner_id.city" t-field="o.partner_id.city"/><br t-if="o.partner_id.city and not o.partner_id.state_id"></br>
                                <span t-if="o.partner_id.state_id" t-field="o.partner_id.state_id"/>
                                <span t-if="o.partner_id.zip" t-field="o.partner_id.zip"/><br t-if="o.partner_id.zip"></br>
                                <span t-if="o.partner_id.country_id" t-field="o.partner_id.country_id"/>
                                <br t-if="o.partner_id.country_id"></br>
                                <span t-if="o.partner_id.vat">TIN:
                                    <span t-field="o.partner_id.vat"/>
                                </span>
                            </td>
                        </tr>
                        <tr style="font-size:12px;">
                            <th>ATTENTION</th>
                            <td>
                                :
                                <span style="margin-left:2px" t-if="o.partner_id" t-field="o.partner_id.attention"></span>
                            </td>

                            <th>TEL</th>
                            <td>
                                :
                                <span t-field="o.partner_id.phone"></span>
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="col-xs-6 pull-right">
                    <table cellpadding="10" class="table1 table-condensed"
                           style=" width:100%;">
                        <tr style="font-size:12px;">
                            <th>SALES RECEIPT NO.</th>
                            <td>
                                :
                                <span t-field="o.number"/>
                            </td>
                        </tr>
                        <tr style="font-size:12px;">
                            <th>DATE</th>
                            <td>
                                :
                                <span t-field="o.date"/>
                            </td>
                        </tr>
                        <t t-if="o.type != 'out_refund'">
                            <tr style="font-size:12px;">
                                <th>PAYMENT TERM</th>
                                <td>
                                    :
                                    <span t-field="o.pay_now"/>
                                </td>
                            </tr>
                        </t>
                        <tr style="font-size:12px;">
                            <th>CURRENCY</th>
                            <td>
                                :
                                <span t-field="o.currency_id.name"/>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
            <div class="row">
                <table border="1" class="table1 table-condensed"
                       style="table-layout: fixed; width:100%;" id="report-content-table">
                    <thead>
                        <tr style="font-size:12px;">
                            <th class="text-center"
                                style="width:6%;vertical-align:middle;border-top:1px solid black;border-bottom:1px solid black;">
                                NO.
                            </th>
                            <th class="text-center"
                                style="width:15%;vertical-align:middle;border-bottom:1px solid black;border-top:1px solid black;">
                                ACCOUNT
                            </th>
                            <th class="text-center"
                                style="width:33%;vertical-align:middle;border-bottom:1px solid black;border-top:1px solid black;">
                                DESCRIPTION
                            </th>
                            <th class="text-center"
                                style="width:10%;vertical-align:middle;border-bottom:1px solid black;border-top:1px solid black;">
                                AMOUNT
                            </th>
                        </tr>
                    </thead>
                    <tbody class="invoice_tbody">
                        <t t-set="i" t-value="0"/>
                        <tr t-foreach="o.line_cr_ids" t-as="l" style="font-size:12px;">
                            <t t-set="i" t-value="i+1"/>
                            <td class="text-center"
                                style="width:6%; vertical-align:bottom;padding-bottom: 1em;">
                                <span t-esc="i"/>
                            </td>
                            <td class="text-center"
                                style="width:15%;vertical-align:bottom;padding-bottom: 1em;  ">
                                <span t-field="l.account_id.name"/>
                            </td>
                            <td class="text-center"
                                style="width:33%;vertical-align:bottom;padding-bottom: 1em;">
                                <span t-field="l.name"/>
                            </td>
                            <td class="text-center"
                                style="width:10%;vertical-align:bottom;padding-bottom: 1em; ">
                                <span t-field="l.currency_id.symbol"/><span t-field="l.amount"/>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </t>
</template>

<template id="report_sales_receipt">
    <t t-call="report.html_container">
        <t t-foreach="doc_ids" t-as="doc_id">
            <t t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang', 'SalesReceipt_SendByEmail_and_Print_Button_Module.report_sales_receipt_document')"/>
        </t>
    </t>
</template>

</data>
</openerp>